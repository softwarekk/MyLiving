<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.kk.myliving.activity.HomePagerActivity"

    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_fl"
        ></FrameLayout>

    <RadioGroup
        android:background="#161617"
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal"



        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_weight="0.65"

            android:layout_width="0dp"
            android:layout_height="80px"
            android:button="@null"
            android:drawableTop="@mipmap/main_hall_n"
            android:background="@null"

            android:layout_gravity="center_vertical"
            />

        <RadioButton
            android:layout_weight="0.51"
            android:id="@+id/rb_dynamic"
            android:layout_width="0dp"
            android:layout_height="80px"
            android:button="@null"
            android:drawableTop="@mipmap/main_dynamic_n"
            android:background="@null"


            android:layout_gravity="center_vertical"
            />

        <RadioButton
            android:layout_weight="0.85"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"

            android:background="@null"

            android:gravity="center_horizontal"
            />


        <RadioButton
            android:layout_weight="0.42"
            android:id="@+id/rb_message"
            android:layout_width="0dp"
            android:layout_height="80px"
            android:button="@null"
            android:drawableTop="@mipmap/main_message_n"
            android:background="@null"


            android:layout_gravity="center_vertical"
            />

        <RadioButton
            android:layout_weight="0.73"
            android:id="@+id/rb_user"
            android:layout_width="0dp"
            android:layout_height="80px"
            android:button="@null"
            android:drawableTop="@mipmap/main_user_n"
            android:background="@null"


            android:layout_gravity="center_vertical"
            />


    </RadioGroup>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="200px"
        android:layout_height="340px"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">


        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/main_bottom_arc"

            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/rb_home_start_living"
                android:layout_width="160px"
                android:layout_height="210px"
                android:src="@mipmap/main_start_live"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"

                />
    </RelativeLayout>

</RelativeLayout>
